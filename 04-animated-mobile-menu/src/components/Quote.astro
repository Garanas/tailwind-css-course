---
interface Props {
    author: string;
}

const {author} = Astro.props;
---

<figure class="my-12">
    <blockquote class="bg-teal-600 dark:bg-black pl-14 pr-8 py-12 rounded-3xl relative">
        <span class="absolute top-0 left-4 text-9xl text-white opacity-25 font-serif transform translate-x-2 translate-y-2">&#8220;</span>
        <p class="text-2xl sm:text-3xl text-left mt-2 text-white dark:text-slate-400">
            <slot/>
        </p>
        <span class="absolute bottom-0 right-4 text-9xl text-white opacity-25 font-serif transform -translate-x-2 translate-y-16">&#8221;</span>
    </blockquote>

    <figcaption
            class="italic text-xl sm:text-2xl text-right mt-2 text-slate-500 dark:text-slate-400"
    >
        - {author}
    </figcaption>
</figure>

